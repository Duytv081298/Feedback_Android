<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Your Feedback"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#007bff"
        android:textColor="#fff"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporter: "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginVertical="7dp"/>
                <TextView
                    android:id="@+id/feedback_reporter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Name: "
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"/>
                <TextView
                    android:id="@+id/feedback_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:text="Restaurant type: "
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/feedback_restaurant_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and time of the visit:"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"/>
                <TextView
                    android:id="@+id/feedback_time_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average meal price per person:"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"/>
                <TextView
                    android:id="@+id/feedback_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes:"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"/>
                <TextView
                    android:id="@+id/feedback_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"
                    android:text="Food Quality Rating:"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"/>
                <RatingBar
                    android:id="@+id/feedback_food_quality_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:saveEnabled="true"
                    android:stepSize="1"
                    android:isIndicator = "true"
                    android:theme="@style/RatingBar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cleanliness Rating:"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"/>
                <RatingBar
                    android:id="@+id/feedback_cleanliness_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:saveEnabled="true"
                    android:stepSize="1"
                    android:isIndicator = "true"
                    android:theme="@style/RatingBar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Rating:"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_marginVertical="7dp"/>
                <RatingBar
                    android:id="@+id/feedback_service_rating"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:saveEnabled="true"
                    android:stepSize="1"
                    android:isIndicator = "true"
                    android:theme="@style/RatingBar" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/feedbackCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_cancel"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/feedbackSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_marginLeft="20dp"
                android:text="Send Feedback"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>